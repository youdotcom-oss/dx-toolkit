{
  "name": "dx-toolkit",
  "description": "Open-source toolkit enabling developers to integrate You.com's AI capabilities into their workflows",
  "private": true,
  "engines": {
    "node": ">=18",
    "bun": ">= 1.2.21"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "check": "bun run check:workspace-deps && bun run --filter '*' check",
    "check:workspace-deps": "bash scripts/check-workspace-deps.sh",
    "check:write": "bun run --filter '*' check:write",
    "dev:mcp": "bun --cwd packages/mcp dev",
    "format": "bun run --filter '*' format",
    "lint": "bun run --filter '*' lint",
    "lint:fix": "bun run --filter '*' lint:fix",
    "prepare": "git config core.hooksPath .hooks",
    "start:mcp": "bun --cwd packages/mcp start",
    "test": "bun run --filter '*' test",
    "test:coverage": "bun run --filter '*' test:coverage",
    "test:mcp": "bun --cwd packages/mcp test",
    "test:watch": "bun run --filter '*' test:watch"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.{json,md}": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "package.json": [
      "format-package --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/bun": "latest",
    "format-package": "^7.0.0",
    "lint-staged": "^16.2.7",
    "typescript": "5.9.3"
  }
}
